---
const currentYear = new Date().getFullYear();

const navLinks = [
  { label: 'Services', href: '/services' },
  { label: 'About', href: '/about' },
  { label: 'Contact', href: '/contact' },
];

const personaLinks = [
  { label: 'For Founders', href: '/for-founders' },
  { label: 'For CTOs', href: '/for-engineering-leaders' },
  { label: 'For AI Adoption', href: '/for-ai-adoption' },
];
---

<footer class="bg-neutral-900 text-neutral-300 border-t border-[rgba(255,255,255,0.1)]">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-12 md:py-16">
    <div class="grid grid-cols-1 gap-8 md:grid-cols-3 lg:grid-cols-4">
      <!-- Brand -->
      <div class="md:col-span-1 lg:col-span-1">
        <a href="/" class="inline-flex items-center gap-2.5 no-underline hover:no-underline" aria-label="Soft-TAB home">
          <img src="/logo.png" alt="" width="32" height="32" class="rounded-[7px]" />
          <span class="text-xl font-semibold text-neutral-100" style="letter-spacing: -0.02em;">Soft-TAB</span>
        </a>
        <p class="mt-3 text-sm text-neutral-400 leading-relaxed">
          AI-augmented software engineering consultancy. Senior expertise. Real outcomes.
        </p>
      </div>

      <!-- Navigation -->
      <div>
        <h3 class="text-sm font-semibold text-neutral-100 uppercase tracking-wider mb-3">Company</h3>
        <ul class="space-y-2">
          {navLinks.map((link) => (
            <li>
              <a href={link.href} class="text-sm text-neutral-400 hover:text-neutral-100 no-underline hover:no-underline transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Who We Help -->
      <div>
        <h3 class="text-sm font-semibold text-neutral-100 uppercase tracking-wider mb-3">Who We Help</h3>
        <ul class="space-y-2">
          {personaLinks.map((link) => (
            <li>
              <a href={link.href} class="text-sm text-neutral-400 hover:text-neutral-100 no-underline hover:no-underline transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Social -->
      <div>
        <h3 class="text-sm font-semibold text-neutral-100 uppercase tracking-wider mb-3">Connect</h3>
        <a
          href="https://www.linkedin.com/company/soft-tab"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 text-sm text-neutral-400 hover:text-neutral-100 no-underline hover:no-underline transition-colors"
          aria-label="Soft-TAB on LinkedIn"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z" />
            <rect x="2" y="9" width="4" height="12" />
            <circle cx="4" cy="4" r="2" />
          </svg>
          LinkedIn
        </a>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="mt-12 pt-8 border-t border-[rgba(255,255,255,0.1)] flex flex-col sm:flex-row items-center justify-between gap-4">
      <p class="text-xs text-neutral-400">
        &copy; {currentYear} Soft-TAB, LLC. All rights reserved.
      </p>
    </div>
  </div>
</footer>
