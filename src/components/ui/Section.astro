---
interface Props {
  id?: string;
  class?: string;
  background?: 'default' | 'subtle' | 'gradient' | 'dark';
}

const { id, class: className = '', background = 'default' } = Astro.props;

const bgClasses: Record<string, string> = {
  default: '',
  subtle: 'bg-surface-subtle',
  gradient: 'bg-gradient-surface',
  dark: 'bg-neutral-900 text-neutral-100',
};
---

<section id={id} class:list={['py-20 md:py-28 lg:py-32', bgClasses[background], className]}>
  <slot />
</section>
