---
interface Props {
  headline: string;
  body: string;
}

const { headline, body } = Astro.props;
---

<div class="group relative h-full rounded-lg p-px border border-default card-border-draw">
  <div class="relative z-10 rounded-[calc(0.5rem-1px)] bg-surface-card p-8 md:p-10 h-full group-hover:shadow-[0_0_24px_rgba(7,121,229,0.08)] transition-shadow duration-[var(--duration-medium)]">
    <div class="w-10 h-1 rounded-full bg-gradient-brand mb-6 opacity-60 group-hover:opacity-100 transition-opacity duration-[var(--duration-medium)]" aria-hidden="true"></div>
    <h3 class="text-xl font-semibold text-primary">{headline}</h3>
    <p class="mt-4 text-secondary leading-relaxed">{body}</p>
  </div>
</div>
