---
import Container from '../ui/Container.astro';
import Button from '../ui/Button.astro';

interface Props {
  headline: string;
  subheadline?: string;
  buttonLabel: string;
  buttonHref: string;
}

const { headline, subheadline, buttonLabel, buttonHref } = Astro.props;
---

<section class="relative overflow-hidden py-24 md:py-32 lg:py-36 bg-gradient-subtle">
  <!-- Decorative accent -->
  <div class="pointer-events-none absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 h-[30rem] w-[30rem] rounded-full bg-primary-500/[0.04] blur-3xl" aria-hidden="true"></div>

  <Container>
    <div class="relative text-center max-w-2xl mx-auto">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-semibold text-primary leading-tight">
        {headline}
      </h2>
      {subheadline && (
        <p class="mt-6 text-lg text-secondary leading-relaxed">
          {subheadline}
        </p>
      )}
      <div class="mt-10">
        <Button href={buttonHref} variant="primary" size="lg">
          {buttonLabel}
        </Button>
      </div>
    </div>
  </Container>
</section>
