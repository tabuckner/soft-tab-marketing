---
import StatCard from './StatCard.astro';

interface Stat {
  value: string;
  label: string;
}

interface Props {
  stats: Stat[];
}

const { stats } = Astro.props;
---

<div class="grid grid-cols-1 sm:grid-cols-3 gap-8 md:gap-12">
  {stats.map((stat) => (
    <StatCard value={stat.value} label={stat.label} />
  ))}
</div>
