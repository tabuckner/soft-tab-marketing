---
interface Props {
  number: number;
  title: string;
  body: string;
  isLast?: boolean;
}

const { number, title, body, isLast = false } = Astro.props;
---

<div class="reveal relative flex gap-6" style={`transition-delay: ${(number - 1) * 120}ms;`}>
  <!-- Step indicator + connector -->
  <div class="flex flex-col items-center">
    <div class="flex h-11 w-11 shrink-0 items-center justify-center rounded-full bg-gradient-brand text-white font-semibold text-sm shadow-xs">
      {number}
    </div>
    {!isLast && (
      <div class="w-px flex-1 bg-gradient-to-b from-primary-400 to-accent-400 mt-3 mb-3 opacity-30"></div>
    )}
  </div>

  <!-- Content -->
  <div class:list={['pb-10', isLast && 'pb-0']}>
    <h3 class="text-lg font-semibold text-primary mt-2">{title}</h3>
    <p class="mt-2 text-secondary leading-relaxed">{body}</p>
  </div>
</div>
