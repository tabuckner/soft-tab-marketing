---
// Modern abstract graphic for the homepage hero
// Gradient mesh orbs with subtle grid — inspired by Linear/Vercel aesthetic
---

<div class="hero-graphic relative w-full aspect-square max-w-[560px] mx-auto" aria-hidden="true">
  <!-- Gradient mesh orbs (CSS, not SVG — smoother rendering) -->
  <div class="hero-orb hero-orb--primary"></div>
  <div class="hero-orb hero-orb--accent"></div>
  <div class="hero-orb hero-orb--subtle"></div>

  <!-- Fine grid overlay -->
  <div class="hero-grid"></div>

  <!-- Soft noise texture -->
  <svg class="absolute inset-0 w-full h-full opacity-[0.03] mix-blend-overlay pointer-events-none" xmlns="http://www.w3.org/2000/svg">
    <filter id="hero-noise">
      <feTurbulence type="fractalNoise" baseFrequency="0.65" numOctaves="3" stitchTiles="stitch" />
    </filter>
    <rect width="100%" height="100%" filter="url(#hero-noise)" />
  </svg>
</div>

<style>
  .hero-graphic {
    position: relative;
    overflow: hidden;
    border-radius: 50%;
    mask-image: radial-gradient(ellipse at center, black 40%, transparent 72%);
    -webkit-mask-image: radial-gradient(ellipse at center, black 40%, transparent 72%);
  }

  .hero-orb {
    position: absolute;
    border-radius: 50%;
    will-change: transform;
  }

  .hero-orb--primary {
    width: 70%;
    height: 70%;
    top: 10%;
    left: 20%;
    background: radial-gradient(circle at 40% 40%, var(--color-primary-400), var(--color-primary-600) 70%, transparent 100%);
    opacity: 0.5;
    filter: blur(40px);
    animation: orb-drift-1 16s ease-in-out infinite;
  }

  .hero-orb--accent {
    width: 55%;
    height: 55%;
    bottom: 5%;
    left: 5%;
    background: radial-gradient(circle at 60% 50%, var(--color-accent-400), var(--color-accent-600) 70%, transparent 100%);
    opacity: 0.4;
    filter: blur(50px);
    animation: orb-drift-2 20s ease-in-out infinite;
  }

  .hero-orb--subtle {
    width: 45%;
    height: 45%;
    top: 30%;
    right: 0;
    background: radial-gradient(circle at 50% 50%, var(--color-primary-300), transparent 70%);
    opacity: 0.3;
    filter: blur(60px);
    animation: orb-drift-3 24s ease-in-out infinite;
  }

  .hero-grid {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(to right, var(--color-border) 1px, transparent 1px),
      linear-gradient(to bottom, var(--color-border) 1px, transparent 1px);
    background-size: 40px 40px;
    opacity: 0.3;
    mask-image: radial-gradient(ellipse at center, black 20%, transparent 65%);
    -webkit-mask-image: radial-gradient(ellipse at center, black 20%, transparent 65%);
  }

  @keyframes orb-drift-1 {
    0%, 100% { transform: translate(0, 0) scale(1); }
    33% { transform: translate(8px, -12px) scale(1.04); }
    66% { transform: translate(-6px, 8px) scale(0.97); }
  }

  @keyframes orb-drift-2 {
    0%, 100% { transform: translate(0, 0) scale(1); }
    33% { transform: translate(-10px, 6px) scale(1.03); }
    66% { transform: translate(12px, -8px) scale(0.96); }
  }

  @keyframes orb-drift-3 {
    0%, 100% { transform: translate(0, 0) scale(1); }
    50% { transform: translate(-8px, -10px) scale(1.05); }
  }

  @media (prefers-reduced-motion: reduce) {
    .hero-orb {
      animation: none;
    }
  }
</style>
