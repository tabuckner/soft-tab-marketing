---
interface Props {
  quote: string;
  name: string;
  title: string;
  company: string;
}

const { quote, name, title, company } = Astro.props;
---

<div class="group relative rounded-lg p-px border border-default card-border-draw">
  <blockquote class="relative z-10 flex flex-col rounded-[calc(0.5rem-1px)] bg-surface-card p-8 md:p-10 h-full overflow-hidden group-hover:shadow-[0_0_24px_rgba(7,121,229,0.08)] transition-shadow duration-[var(--duration-medium)]">
    <!-- Quote content -->
    <div class="flex-1">
      <!-- Decorative quote mark -->
      <span class="block text-5xl leading-none text-gradient-brand font-serif select-none mb-4" aria-hidden="true">&ldquo;</span>

      <p class="text-secondary text-lg leading-relaxed italic">
        {quote}
      </p>
    </div>

    <footer class="mt-6 pt-6 border-t border-default flex items-center gap-3">
      <div>
        <p class="text-sm font-semibold text-primary">{name}</p>
        <p class="text-xs text-tertiary">{title}, {company}</p>
      </div>
    </footer>
  </blockquote>
</div>
