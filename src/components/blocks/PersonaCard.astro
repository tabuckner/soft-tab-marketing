---
interface Props {
  headline: string;
  body: string;
  ctaLabel: string;
  href: string;
}

const { headline, body, ctaLabel, href } = Astro.props;
---

<!-- Outer wrapper: gradient border appears on hover -->
<a
  href={href}
  class="group relative block rounded-2xl p-px bg-default border border-default hover:border-transparent hover:bg-[image:var(--gradient-brand)] transition-all duration-[var(--duration-medium)] ease-[var(--ease-standard)] no-underline hover:no-underline"
>
  <!-- Inner card with solid bg -->
  <div class="relative flex flex-col h-full rounded-[calc(1rem-1px)] bg-surface-card p-8 md:p-10 group-hover:shadow-glow transition-shadow duration-[var(--duration-medium)]">
    <!-- Top content -->
    <div class="flex-1">
      <h3 class="text-xl font-semibold text-primary group-hover:text-brand transition-colors">
        {headline}
      </h3>
      <p class="mt-4 text-secondary leading-relaxed">
        {body}
      </p>
    </div>

    <!-- CTA pinned to bottom -->
    <span class="mt-8 inline-flex items-center gap-1.5 text-sm font-semibold text-brand">
      {ctaLabel}
      <svg class="h-4 w-4 transition-transform group-hover:translate-x-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <line x1="5" y1="12" x2="19" y2="12" />
        <polyline points="12 5 19 12 12 19" />
      </svg>
    </span>
  </div>
</a>
